<% include header %>

<h2>Write a new entry</h2>

<form method="post" role="form">
  <div class="form-group">
    <label for="title">새 후기</label>
    <input type="text" class="form-control" id="title" name="title" placeholder="Entry title" required>
  </div>
  <div class="form-group">
    <label for="body">후기 내용</label>
    <textarea class="form-control" id="body" name="body" placeholder="수업 내용 후기를 작성해주세요." rows="3" required></textarea>
  </div>
  <div class="form-group">
    <input type="submit" value="후기 저장하기." class="btn btn-primary">
  </div>
</form>

<% include footer %>
